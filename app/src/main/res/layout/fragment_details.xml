<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.sudhirmishra.ngoapp.DetailsActivityFragment"
    tools:showIn="@layout/activity_details">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"

        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="title head"
            android:textColor="@android:color/black"

            android:textSize="@dimen/label_fontSize"
            android:paddingLeft="@dimen/label_leftMargin"/>

        <TextView
            android:id="@+id/body_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Registration number details"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/label_leftMargin"
            android:textSize="@dimen/label_fontSize" />

        <TextView
            android:id="@+id/body_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="body content"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/detail_leftMargin"
            android:textSize="@dimen/detail_fontSize" />


        <TextView
            android:id="@+id/department_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Category or Sector"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/label_leftMargin"
            android:textSize="@dimen/label_fontSize" />
        <TextView
            android:id="@+id/department_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Department content"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/detail_leftMargin"
            android:textSize="@dimen/detail_fontSize" />

        <TextView
            android:id="@+id/contact_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Founder of NGO"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/label_leftMargin"
            android:textSize="@dimen/label_fontSize" />
        <TextView
            android:id="@+id/contact_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Contact content"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/detail_leftMargin"
            android:textSize="@dimen/detail_fontSize" />


        <TextView
            android:id="@+id/venu_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Address"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/label_leftMargin"
            android:textSize="@dimen/label_fontSize" />
        <TextView
            android:id="@+id/venu_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Venu content"
            android:gravity="left"
            android:textColor="@android:color/black"
            android:paddingLeft="@dimen/detail_leftMargin"
            android:textSize="@dimen/detail_fontSize" />
    </LinearLayout>


</RelativeLayout>
